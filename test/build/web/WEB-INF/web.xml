        <servlet-class>anpdt.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchPageServlet</servlet-name>
        <servlet-class>anpdt.controller.SearchPageServlet</servlet-class>
